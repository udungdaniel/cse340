<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Add New Classification</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="form-container">
        <h1>Add New Classification</h1>

        <!-- Flash message -->
        <% if (message) { %>
            <div class="flash-message success">
                <%= message %>
            </div>
            <% } %>

                <!-- Display validation errors -->
                <% if (errors && errors.length> 0) { %>
                    <div class="flash-message error">
                        <ul>
                            <% errors.forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="/inv/add-classification" method="post" id="addClassificationForm"
                            class="styled-form">
                            <div class="form-group">
                                <label for="classification_name">Classification Name</label>
                                <input type="text" id="classification_name" name="classification_name"
                                    value="<%= classification_name ? classification_name : '' %>" required
                                    pattern="[A-Za-z0-9]+" title="Only letters and numbers allowed">
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn">Add Classification</button>
                            </div>
                        </form>

                        <div class="form-links">
                            <a href="/inv/"> Back to Management</a>
                        </div>
    </div>
</body>

</html>