<main>
    <h1>Inventory Management</h1>

    <!-- Flash message (optional) -->
    <% if (message) { %>
        <div class="flash-message">
            <%= message %>
        </div>
        <% } %>

            <!-- Links to add new items -->
            <div class="management-links">
                <a href="/inv/add-classification" class="button">Add New Classification</a>
                <a href="/inv/add-vehicle" class="button">Add New Vehicle</a>
            </div>

            <!-- Section for managing inventory -->
            <h2>Manage Inventory</h2>
            <p>Select a classification from the list below to see the items belonging to that classification.</p>

            <!-- Classification select list -->
            <div class="classification-select">
                <%- classificationSelect %>
            </div>

            <!-- Table placeholder for AJAX results -->
            <table id="inventoryDisplay"></table>

            <!-- Message if JS is disabled -->
            <noscript>JavaScript must be enabled to use this page.</noscript>
</main>

<!-- Hook up your management JS file -->
<script src="/js/inventory.js"></script>